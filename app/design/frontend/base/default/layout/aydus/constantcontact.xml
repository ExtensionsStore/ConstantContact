<layout version="0.1.0">

    <aydus_constantcontact_form_subscribe translate="label">
    
        <label>Subscribe</label>
        <reference name="head">
            <action method="setTitle" translate="title" module="aydus_constantcontact"><title>Subscribe</title></action>
        </reference>
        <reference name="root">
            <action method="setTemplate"><template>page/2columns-right.phtml</template></action>
            <action method="setHeaderTitle" translate="title" module="aydus_constantcontact"><title>Subscribe</title></action>
        </reference>
        
        <reference name="content">
			<block type="aydus_constantcontact/form" name="constantcontact.form.addcontact" template="aydus/constantcontact/forms/subscribe.phtml">
			</block>
        </reference>    	
    
    </aydus_constantcontact_form_subscribe>
    
    <newsletter_manage_index>
        <reference name="customer_newsletter">
            <block type="customer/newsletter" name="customer.form.newsletter.extra" template="aydus/constantcontact/customer/form/newsletter/extra.phtml">
            </block>
        </reference>
    </newsletter_manage_index>    

</layout>
