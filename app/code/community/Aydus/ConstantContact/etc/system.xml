<?xml version="1.0"?>
<!-- 
/**
 * ConstantContact system configuration
 *
 * @category   Aydus
 * @package    Aydus_ConstantContact
 * @author     Aydus Consulting <davidt@aydus.com>
 */
-->
<config>
    <sections>
        <aydus_constantcontact translate="label" module="aydus_constantcontact">
            <label>Constant Contact</label>
            <tab>general</tab>
            <sort_order>303</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>0</show_in_website>
            <show_in_store>0</show_in_store>        
            <groups>
                <configuration translate="label" module="aydus_constantcontact">
                    <label>Configuration</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>25</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>0</show_in_website>
                    <show_in_store>0</show_in_store>
                    <fields>
                        <enabled translate="label">
                            <label>Enabled</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <backend_model>adminhtml/system_config_backend_translate</backend_model>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                        </enabled>   
                        <application translate="label comment">
                            <label>Application Name</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>20</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                            <comment><![CDATA[Application name. Not required.]]></comment>
                        </application>  
                        <key translate="label comment">
                            <label>Access Key</label>
                            <frontend_type>obscure</frontend_type>
                            <backend_model>adminhtml/system_config_backend_encrypted</backend_model>
                            <sort_order>30</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                            <comment><![CDATA[Access key to the Constant Contact API.]]></comment>
                        </key>   
                        <secret translate="label comment">
                            <label>Access Secret</label>
                            <frontend_type>obscure</frontend_type>
                            <backend_model>adminhtml/system_config_backend_encrypted</backend_model>
                            <sort_order>40</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                            <comment><![CDATA[Access Secret to the Constant Contact API.]]></comment>
                        </secret>                                                  
                        <token translate="label comment">
                            <label>Access Token</label>
                            <frontend_type>obscure</frontend_type>
                            <backend_model>adminhtml/system_config_backend_encrypted</backend_model>
                            <sort_order>50</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                            <comment><![CDATA[Access token for the above application and key.]]></comment>
                        </token>   
                        <rate_limit_per_day translate="label comment">
                            <label>API Rate Limit Per Day</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>70</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                            <comment><![CDATA[Maximum number of API calls per day (i.e. 10000 calls per day).]]></comment>
                        </rate_limit_per_day>                            
                        <current_transactions translate="label comment">
                            <label>Current Transactions</label>
                            <frontend_type>text</frontend_type>
                            <frontend_model>aydus_constantcontact/adminhtml_system_config_form_field_currenttransactions</frontend_model>
                            <sort_order>80</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                            <comment><![CDATA[Current number of transactions, incremented each call to the API.]]></comment>
                        </current_transactions>                                                    
                        <list translate="label comment">
                            <label>General Contact List</label>
                            <frontend_type>select</frontend_type>
                            <source_model>aydus_constantcontact/system_config_source_list</source_model>
                            <sort_order>90</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                            <comment><![CDATA[Subscribe Magento newsletter subscriptions to this list. Note, enter key and token first to see list.]]></comment>
                        </list>   
                        <lists translate="label comment">
                            <label>Additional Lists</label>
                            <frontend_type>multiselect</frontend_type>
                            <source_model>aydus_constantcontact/system_config_source_list</source_model>
                            <sort_order>100</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                            <comment><![CDATA[Select additional lists users can subscribe to. Note, enter key and token first to see list.]]></comment>
                        </lists>                                                          
                                                                                                       
                    </fields>
                </configuration>                
            </groups>
        </aydus_constantcontact>
    </sections>
</config>

